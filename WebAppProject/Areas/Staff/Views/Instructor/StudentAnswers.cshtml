@model IEnumerable<StudentAnswersViewModel>
@{
    ViewData["Title"] = "E-Exam | Answers";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <p class="card-title m-0">Answers</p>
                    <a type="button"
                       asp-action="ShowExams"
                       class="btn btn-inverse-primary">
                        Back
                    </a>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table display expandable-table">
                                <thead>
                                    <tr>
                                        <th>Question (grade)</th>
                                        <th>Answer</th>
                                        <th>Correct Answer</th>
                                        <th>Mark</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var examChoice in Model)
                                    {
                                        <tr>
                                            <td>@examChoice.QuestionText (@examChoice.QuestionGrade)</td>
                                            <td>
                                                <ul class="mb-0">
                                                    @foreach (var choice in examChoice.StudentChoices)
                                                    {
                                                        <li class="@(choice.IsCorrect?"text-success" :"text-danger")">@choice.Text</li>
                                                    }
                                                </ul>
                                            </td>
                                            <td>
                                                <ul class="mb-0">
                                                    @foreach (var choice in examChoice.CorrectChoices)
                                                    {
                                                        <li>@choice.Text</li>
                                                    }
                                                </ul>
                                            </td>
                                            <td>
                                                @if (examChoice.IsCorrect)
                                                {
                                                    <i class="mdi mdi-24px mdi-check-circle text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="mdi mdi-24px mdi-close-circle text-danger"></i>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>