@model IEnumerable<StudentViewModel>
@{
    ViewData["Title"] = "Dashboard | Students";
}
<indicator hidden>admin-dash</indicator>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">Dashboard</p>
                <div class="row">
                    <div class="col-12">
                        <table class="table display expandable-table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count() > 0)
                                    foreach (var student in Model)
                                    {
                                        <tr>
                                            <td>@student.Id</td>
                                            <td>@student.Name</td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="Grades" asp-route-stId="@student.Id">Grades</a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-stId="@student.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                else
                                {
                                    <tr>
                                        <td colspan="3">No Students in this Dept </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>