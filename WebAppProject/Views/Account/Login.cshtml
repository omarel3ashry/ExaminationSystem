@model UserViewModel

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login - Examly";
}
<h4>Hello! let's get started</h4>
<h6 class="font-weight-light mb-4">Sign in to continue.</h6>
<form class="pt-3" asp-action="Login">
    <div class="form-group">
        <label asp-for="Email" class="fs-3  text-primary text-lg-start"></label>
        <br />
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control form-control-lg" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="fs-3 text-primary text-xl-center"></label>
        <br />
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control form-control-lg" type="password"/>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="text-center mt-4 font-weight-light">
        Don't have an account? <a asp-action="Register" class="text-primary">Create</a>
    </div>
</form>
        