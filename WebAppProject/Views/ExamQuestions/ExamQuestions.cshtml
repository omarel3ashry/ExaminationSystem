@model List<ExamQuestions>

<!DOCTYPE html>
<html>
<head>
    <title>Exam</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
        }

        th {
            background-color: #f2f2f2;
        }

        h2 {
            margin-top: 20px;
            margin-bottom: 10px;
        }

        h3 {
            margin-bottom: 5px;
        }

        input[type="radio"] {
            margin-right: 5px;
        }

        button[type="submit"] {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button[type="submit"]:hover {
                background-color: darkred;
            }

        .error-message {
            color: red;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Exam</h1>
        <table>
            <tr>
                <th>Department</th>
                <th>Course Name</th>
                <th>Instructor Name</th>
                <th>Total Grade</th>
                <th>Duration</th>
            </tr>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Department</td>
                    <td>@course.CourseName</td>
                    <td>@course.InstructorName</td>
                    <td>@course.TotalGrade</td>
                    <td>@course.DurationInHours hr</td>
                </tr>
            }
        </table>

        <h2>Answer the Questions</h2>
        <form id="examForm" method="post" asp-controller="ExamQuestions" asp-action="ExamResults">
            @for (int i = 0; i < Model[0].Questions.Count; i++)
            {
                <h3>@(i + 1). @Model[0].Questions[i].Text</h3>
                @for (int j = 0; j < Model[0].Questions[i].Options.Count; j++)
                {
                    <input type="radio" name="Questions[@i].UserAnswer" value="@Model[0].Questions[i].Options[j]" /> @Model[0].Questions[i].Options[j]
                    <br />
                }
                <input type="hidden" name="Questions[@i].Text" value="@Model[0].Questions[i].Text" />
                <input type="hidden" name="Questions[@i].CorrectAnswer" value="@Model[0].Questions[i].CorrectAnswer" />
                <hr />
            }
            <div class="error-message"></div>
            <button type="submit">Submit Exam</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // When the document is fully loaded
        $(document).ready(function () {
            // When the exam form is submitted
            $('#examForm').submit(function (event) {
                var unanswered = false; // Flag to track if any question is unanswered

                // Check if all questions are answered
                $('input[type="radio"]').each(function () { // Iterate over each radio input
                    var questionIndex = $(this).attr('name').split('[')[1].split(']')[0]; // Extract the question index
                    var isChecked = $('input[name="Questions[' + questionIndex + '].UserAnswer"]:checked').length > 0; // Check if any radio button for this question is checked
                    if (!isChecked) { // If no radio button is checked
                        unanswered = true; // Set the unanswered flag to true
                        return false; // Exit the loop early if any question is unanswered
                    }
                });

                if (unanswered) { // If any question is unanswered
                    event.preventDefault(); // Prevent form submission
                    $('.error-message').text('Please answer all the questions.'); // Show error message
                }
            });
        });
    </script>
</body>
</html>
