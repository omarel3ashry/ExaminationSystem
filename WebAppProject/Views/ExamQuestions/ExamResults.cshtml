@model List<Question>

<!DOCTYPE html>
<html>
<head>
    <title>Exam Results</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .correct {
            background-color: #90EE90;
            color: green;
        }

        .incorrect {
            background-color: #FFCCCC;
            color: red;
        }

        .answer-icon {
            font-size: 18px;
        }

        .score-section {
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

            .score-section p {
                font-weight: bold;
                margin-bottom: 5px;
            }

        .final-grade {
            font-size: 20px;
        }
    </style>
</head>
<body>
    <div class="score-section">
        <h1>Exam Results</h1>
        <p>Your score (number of correct answers): @ViewBag.Score out of @Model.Count questions</p>
        <p class="final-grade">Your final grade (out of 100): @ViewBag.FinalGrade</p>
    </div>
    <table>
        <tr>
            <th>Question</th>
            <th>Your Answer</th>
            <th>Correct Answer</th>
            <th>Result</th>
        </tr>
        @foreach (var question in Model)
        {
            <tr>
                <td>@question.Text</td>
                <td class="@(question.UserAnswer == question.CorrectAnswer ? "correct" : "incorrect")">@question.UserAnswer</td>
                <td>@question.CorrectAnswer</td>
                <td class="answer-icon">
                    @if (question.UserAnswer == question.CorrectAnswer)
                    {
                        <span>&#10004;</span>
                    }
                    else
                    {
                        <span>&#10006;</span>
                    }
                </td>
            </tr>
        }
    </table>
</body>
</html>
