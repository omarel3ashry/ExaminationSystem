@model QuestionViewModel

@{
    ViewData["Title"] = "Add Question";
}

<h1>Add Question</h1>

<form asp-action="AddQuestion" asp-controller="Instructor" method="post">

    <input type="hidden" asp-for="InstructorId" value="@ViewBag.InstructorId" />
    <input type="hidden" asp-for="CourseId" value="@ViewBag.CourseId" />

    <div class="form-group">
        <label asp-for="Type">Question Type</label>
        <select asp-for="Type" id="questionType" class="form-control">
            <option value="1">Multiple Choice</option>
            <option value="2">True/Fasle</option>
        </select>
    </div>

    <partial name="QuestionPartial" />

    <button type="submit" asp-route-id="@ViewBag.Courseid" class="btn btn-primary">Add Question</button>
</form>

<script src="/lib/jquery/dist/jquery.js"></script>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var questionTypeSelect = document.getElementById("questionType");
            $("#choicesContainer").load("/Instructor/AddChoices/1");

            questionTypeSelect.addEventListener("change", function () {
                var type = this.value;
                if (type === '1') {
                    $("#choicesContainer").load("/Instructor/AddChoices/1");
                } else if (type === '2') {
                    $("#choicesContainer").load("/Instructor/AddChoices/2");
                }
            });
        });
    </script>

}

