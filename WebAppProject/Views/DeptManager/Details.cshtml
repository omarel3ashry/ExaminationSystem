@model DataAccessLibrary.Model.DepartmentCourse

@{
    ViewData["Title"] = "Details";
}


<h1>Course Details</h1>

<table class="table table-bordered">
    <tbody>
        <tr>
            <td class="col-4"><strong>Id</strong></td>
            <td>@Model.Course.Id</td>
        </tr>
        <tr>
            <td><strong>Name</strong></td>
            <td>@Model.Course.Name</td>
        </tr>
        <tr>
            <td><strong>Description</strong></td>
            <td>@Model.Course.Description</td>
        </tr>
        <tr>
            <td><strong>Instructor Name</strong></td>
            <td>@Model.Instructor?.Name</td>
        </tr>
        <tr>
            <td><strong>Department</strong></td>
            <td>@Model.Department.Name</td>
        </tr>
        <tr>
            <td><strong>Branch</strong></td>
            <td>@Model.Department.Branch.Name</td>
        </tr>
    </tbody>
</table>
