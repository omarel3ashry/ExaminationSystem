@model IEnumerable<StudentExam>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StudentGrades</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body>
    <a class="btn btn-outline-info" asp-action="Index" asp-controller="Manage">Back</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>Course Namee</td>
                <td>Date Taken</td>
                <td>Grade</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
                foreach (var studentExam in Model)
                {
                    <tr>
                        <td>@studentExam.Exam.course.CrsName</td>
                        <td>@studentExam.Exam.Date</td>
                        <td>@studentExam.Grade</td>
                        <td>                           
                            <a class="btn btn-info" asp-action="StudentAnswers" asp-controller="Manage" asp-route-stId="@studentExam.StudentId" asp-route-examId="@studentExam.ExamId">Answers</a>
                        </td>
                    </tr>
                }
            else
            {
                <tr>
                    <td colspan="4">No Exams for this Student </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
