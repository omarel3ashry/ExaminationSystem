@model IEnumerable<Student>
@{
    ViewData["Title"] = "Students";
}
<h1>Dashboard</h1>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
            foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>
                        <a class="btn btn-info" asp-action="studentGrades" asp-controller="Manage" asp-route-stId="@student.Id">Grades</a>
                        <a class="btn btn-info" asp-action="StudentDelete" asp-controller="Manage" asp-route-stId="@student.Id">Delete</a>
                    </td>
                </tr>
            }
        else
        {
            <tr>
                <td colspan="3">No Students in this Dept </td>
            </tr>
        }
    </tbody>
</table>



   




