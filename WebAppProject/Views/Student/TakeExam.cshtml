@model ExamViewModel
@{
    List<Question> mcqQuestions = Model.Exam.Questions.Where(e => e.Type == 1).ToList();
    List<Question> tfQuestions = Model.Exam.Questions.Where(e => e.Type == 2).ToList();
}
<!DOCTYPE html>
<html>
<head>
    <title>Exam</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
        }

        th {
            background-color: #f2f2f2;
        }

        h2 {
            margin-top: 20px;
            margin-bottom: 10px;
        }

        h3 {
            margin-bottom: 5px;
        }

        input[type="radio"] {
            margin-right: 5px;
        }

        button[type="submit"] {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button[type="submit"]:hover {
                background-color: darkred;
            }

        .error-message {
            color: red;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Exam</h1>
        <table>
            <tr>
                <th>Department</th>
                <th>Course Name</th>
                <th>Instructor Name</th>
                <th>Total Grade</th>
                <th>Duration</th>
            </tr>
                <tr>
                    <td>@Model.DepartmentCourse.Department.Name</td>
                    <td>@Model.DepartmentCourse.Course.Name</td>
                    <td>@Model.DepartmentCourse.Instructor.Name</td>
                    <td>@Model.TotalGrade</td>
                    <td>@Model.Exam.DurationInMinutes Minutes</td>
                </tr>
            
        </table>
        <h2>Answer the Questions</h2>
        <form id="examForm" method="post" asp-controller="Student" asp-action="SubmitExam">
            @if (mcqQuestions.Count > 0)
            {
                <h2>T/F Questions:</h2>
                @for (int i = 0; i < tfQuestions.Count; i++)
                {
                    <h3>@(i + 1). @tfQuestions[i].Text</h3>
                    foreach (var choice in tfQuestions[i].Choices)
                    {
                        <input type="radio" id="@choice.Id" name="tfChoices[@i].Id" value="@choice.Id" />
                        <label for="@choice.Id">@choice.Text </label>
                    }
                    <br />
                    <hr />
                }
            }
            @if (mcqQuestions.Count > 0)
            {
                <h2>MCQ Questions:</h2>
                @for (int i = 0; i < mcqQuestions.Count; i++)
                {
                    <h3>@(i + 1). @mcqQuestions[i].Text</h3>
                    foreach(var choice in mcqQuestions[i].Choices)
                    {
                        <input type="checkbox" id="@choice.Id" value="@choice.Id" />
                        <label for="@choice.Id">@choice.Text </label>
                    }
                    <br />
                    <hr />
                }
            }
            <input type="hidden" name="examId" value="@Model.Exam.Id" />
            <div class="error-message"></div>
            <button type="submit">Submit Exam</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
