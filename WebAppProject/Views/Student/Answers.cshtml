@model IEnumerable<ExamChoices>
@{  
    ViewData["Title"] = "E-Exam | Answers";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StudentAnswers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .correct {
            background-color: #90EE90;
            color: green;
        }
        .incorrect {
            background-color: #FFCCCC;
            color: red;
        }
    </style>
</head>
<body>
    <a class="btn btn-outline-info" asp-action="Exams">Back</a>
    <h4>Grade: @ViewBag.StudentGrade/@ViewBag.TotalGrade</h4>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>Question (grade)</td>
                <td>Answer</td>
                <td>Correct Answer</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var examChoice in Model)
            {
                <tr>
                    <td>@examChoice.Question.Text (@examChoice.Question.Grade)</td>
                    <td class="@(examChoice.IsCorrect ? "correct" : "incorrect")">
                        @foreach (var choice in examChoice.StudentChoices)
                        {
                            <span>@choice.Text</span>
                            <br />
                        }
                    </td>
                    <td>
                        @foreach (var choice in examChoice.CorrectChoices)
                        {
                            <span>@choice.Text </span>
                            <br />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
