@model List<Course>

<h1>Courses</h1>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseName</td>
               
               
                <td>
                    <a asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-info">Info</a>
                    <a asp-action="AssignInstructor" asp-route-id="@course.CourseId" class="btn btn-primary">Assign Instructor</a>
                    <a asp-action="DeleteCourse" onclick="return confirm(' Are you sure ')" asp-route-id="@course.CourseId" class="btn btn-danger">Remove</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddCourse" asp-route-id="@ViewBag.DepartementId"  class="btn btn-success">Add Course</a>
